<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>

    <!-- classPathEntry:数据库的 JDBC驱动的jar 包地址
     这里需要一个mysql的驱动包,去随便找一个驱动包就可以,指定路径
     -->
    <classPathEntry
            location="F:\Program\IntelliJ\Configure\Maven\apache-maven-3.8.1\repository\mysql\mysql-connector-java\8.0.25\mysql-connector-java-8.0.25.jar"/>
    <context id="caigouTables" targetRuntime="MyBatis3">
        <commentGenerator>
            <!-- 是否去除自动生成的注释 true：是 ： false:否 -->
            <!-- 这里选择的是去掉注释,因为mybatis生成的注释非常繁琐 -->
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <!--数据库连接的信息：驱动类、连接地址、用户名、密码 -->

        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://127.0.0.1:3306/supermarket" userId="root" password="root">
            <!--解决mysql8.0以后重复生成所有表的问题-->
            <property name="nullCatalogMeansCurrent" value="true"/>
        </jdbcConnection>

        <!-- 默认 false，把 JDBC DECIMAL 和 NUMERIC 类型解析为 Integer true，把 JDBC DECIMAL 和
        NUMERIC 类型解析为java.math.BigDecimal -->
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!-- targetProject:生成 POJO 类的位置 src/main/java/com.pyg.pojo -->
        <javaModelGenerator targetPackage="com.sk.domain" targetProject="src/main/java">
            <!-- enableSubPackages:是否让schema 作为包的后缀 -->
            <property name="enableSubPackages" value="true"/>
            <!-- 从数据库返回的值被清理前后的空格 -->
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>


        <!-- 生成 XML文件  ./src/main/resources/com.pyg.mapper -->
        <sqlMapGenerator targetPackage="mapper" targetProject="./src/main/resources">
            <property name="enableSubPackages" value="false"/>
        </sqlMapGenerator>

        <!--生成接口-->
        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="com.sk.dao" targetProject="./src/main/java">
            <property name="enableSubPackages" value="false"/>
        </javaClientGenerator>

        <!-- 你要生成逆向工程的表名,这里必须和数据库中的表名保持一致 -->
        <table tableName="biz_category" domainObjectName="Category"></table>
        <table tableName="biz_product" domainObjectName="Product"></table>
        <table tableName="biz_purchase" domainObjectName="Purchase"></table>
        <table tableName="biz_sale" domainObjectName="Sale"></table>
        <table tableName="biz_spec" domainObjectName="Spec"></table>
        <table tableName="biz_stock" domainObjectName="Stock"></table>
        <table tableName="biz_stock_modify_record" domainObjectName="StockModifyRecord"></table>
        <table tableName="biz_supplier" domainObjectName="Supplier"></table>
        <table tableName="sys_menu" domainObjectName="SysMenu"></table>
        <table tableName="sys_role_menu_map" domainObjectName="SysRoleMenuMap"></table>
        <table tableName="sys_user" domainObjectName="User"></table>
    </context>
</generatorConfiguration>
